
global
    maxconn 100

defaults
    log global
    mode tcp
    retries 2
    timeout client 30m
    timeout connect 4s
    timeout server 30m
    timeout check 5s

listen stats
    mode http
    bind *:{{haproxy_port}}
    stats enable
    stats uri /

listen batman
    bind *:5000
    option httpchk
    http-check expect status 200
    default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
    {% for host in groups['pgsql']  %}
    {{host}} {{hostvars[host]['ansible_ssh_host']}}:{{dcs_port}} maxconn 100 check port 8008
    {% endfor %}